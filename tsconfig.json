{
    "compilerOptions": {
        "target": "es2017",
        "lib": ["dom", "es2017"],
        "module": "commonjs",
        "strict": true,
        "removeComments": true,
        "sourceMap": true,
        "outDir": "./dist"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.test.ts"
    ],
    "typeRoots": [
        "./node_modules",
        "./src/definitions"
    ]
}