{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Typescript",
            "type": "npm",
            "script": "build",
            "problemMatcher": {
                "base": "$tsc",
                "fileLocation": "relative"
            }
        },
        {
            "label": "tslint",
            "type": "npm",
            "script": "lint",
            "problemMatcher": {
                "base": "$tslint5",
                "fileLocation": "relative"
            }
        }
    ]
}